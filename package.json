{
  "name": "shop-monorepo",
  "private": true,
  "scripts": {
    "api": "bun run ./apps/api/src/index.ts",
    "web": "cd apps/web && PORT=4000 bun start",
    "nyala": "concurrently -k -n api,web -c blue,green \"bun run ./apps/api/src/index.ts\" \"cd apps/web",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.12",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "prisma": "^6.8.2",
    "zod": "^3.25.28"
  }
}
